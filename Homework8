task1
let checkCase = (text) => {
    if (text.match(/^[A-Z]/)) {
        console.log("It's upper case")
    } else {
        console.log("It's lower case")
    }
}
checkCase('blablabla');

task2
let checkEmail = (email) => {
    if (email.match(/\S+@\S+\.\S+/)) {
        console.log(true)
    } else {
        console.log(false)
    }
}
checkEmail('fhf@Speecst.com');


